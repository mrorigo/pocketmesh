{
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@a2a-js/sdk": ["node_modules/@a2a-js/sdk/dist/index"],
      "@a2a-js/sdk/*": ["node_modules/@a2a-js/sdk/dist/*"]
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ]}
